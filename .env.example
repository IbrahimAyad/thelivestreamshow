# ============================================================================
# The Livestream Show - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase Configuration (REQUIRED)
# ----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service key (backend only - DO NOT expose to client)
SUPABASE_SERVICE_KEY=your-service-key-here

# ----------------------------------------------------------------------------
# OpenAI API Configuration (REQUIRED for AI features)
# ----------------------------------------------------------------------------
# Get API key from: https://platform.openai.com/api-keys

VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Specify model version
VITE_OPENAI_MODEL=gpt-4-turbo-preview

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------

# Environment (development, staging, production)
VITE_ENV=development

# Application URL
VITE_APP_URL=http://localhost:5173

# API Base URL (if different from app URL)
VITE_API_URL=http://localhost:5173

# ----------------------------------------------------------------------------
# Feature Flags (AI Coordinator)
# ----------------------------------------------------------------------------
# These can override default settings

# Enable/disable AI features
VITE_ENABLE_PREDICTIVE_AI=true
VITE_ENABLE_HOST_PROFILE=true
VITE_ENABLE_CONTEXT_MEMORY=true

# ----------------------------------------------------------------------------
# Rate Limiting Configuration (Optional)
# ----------------------------------------------------------------------------
# Override default rate limits

# Questions per minute (default: 10)
VITE_RATE_LIMIT_QUESTIONS_PER_MINUTE=10

# Mood changes per hour (default: 30)
VITE_RATE_LIMIT_MOOD_CHANGES_PER_HOUR=30

# Log inserts per minute (default: 100)
VITE_RATE_LIMIT_LOG_INSERTS_PER_MINUTE=100

# ----------------------------------------------------------------------------
# Context Memory Configuration (Optional)
# ----------------------------------------------------------------------------

# Maximum recent questions to track (default: 50)
VITE_CONTEXT_MEMORY_MAX_SIZE=50

# Similarity threshold for duplicates (default: 0.85)
# Higher = stricter (0.95 = only near-exact matches)
# Lower = more lenient (0.70 = catches more variations)
VITE_CONTEXT_MEMORY_SIMILARITY_THRESHOLD=0.85

# Data retention in days (default: 30)
VITE_CONTEXT_MEMORY_RETENTION_DAYS=30

# ----------------------------------------------------------------------------
# Predictive AI Configuration (Optional)
# ----------------------------------------------------------------------------

# Minimum historical data for predictions (default: 10)
VITE_PREDICTIVE_MIN_HISTORICAL_DATA=10

# Confidence threshold to show predictions (default: 0.6)
VITE_PREDICTIVE_CONFIDENCE_THRESHOLD=0.6

# Cache predictions for N hours (default: 24)
VITE_PREDICTIVE_CACHE_HOURS=24

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------

# Sentry DSN (error tracking)
VITE_SENTRY_DSN=your-sentry-dsn-here

# Environment for Sentry
VITE_SENTRY_ENVIRONMENT=development

# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=info

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ----------------------------------------------------------------------------
# Analytics (Optional)
# ----------------------------------------------------------------------------

# Google Analytics ID
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel token
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# ----------------------------------------------------------------------------
# External Services (Optional)
# ----------------------------------------------------------------------------

# Stripe (for payments if applicable)
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-key

# ----------------------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------------------

# Enable debug mode (shows extra console logs)
VITE_DEBUG=false

# Enable test mode (bypasses certain checks)
VITE_TEST_MODE=false

# Bypass authentication (development only!)
VITE_BYPASS_AUTH=false

# Mock API responses (development only)
VITE_MOCK_API=false

# ----------------------------------------------------------------------------
# Database Settings (for migrations/seeding)
# ----------------------------------------------------------------------------

# Direct database connection (for scripts, not client)
DATABASE_URL=postgresql://user:password@host:5432/database

# Connection pooler URL (recommended for production)
DATABASE_POOLER_URL=postgresql://user:password@pooler:6543/database

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------

# CORS allowed origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session timeout in minutes (default: 60)
VITE_SESSION_TIMEOUT=60

# ----------------------------------------------------------------------------
# Health Check Configuration (Day 10)
# ----------------------------------------------------------------------------

# Health check interval in seconds (default: 60)
VITE_HEALTH_CHECK_INTERVAL=60

# Alert if no events in N seconds (default: 300 = 5 minutes)
VITE_HEALTH_CHECK_ALERT_THRESHOLD=300

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# - VITE_ prefix makes variables available in client-side code
# - Variables without VITE_ are backend/build-time only
# - Never commit API keys or secrets to git
# - Use different keys for development/staging/production
# - Rotate keys regularly for security
# ============================================================================
